var snds = snds1;
var pnum = 0;
var flg = 1;
var longplay = 1;

function doMIDI(xn)
local (ipca, dbg, pn)
(
    ipca = event(); 
    flg = 1;
    while(flg) (
        dbg = SYSFlgs[0];
        (dbg & stopbit) ? (
            sprintf(str, "THRD%d  : about to stop.", xn); GM_Log(str);
            flg = 0;
        ) : (
            (dbg & 1) ? (
                sprintf(str, "THRD%d  : going to wait.", xn); GM_Log(str);
            );
            event(`wait, `MIDI);
            (dbg & 2) ? (
                sprintf(str, "THRD%d ==> %d: %s  %d  %d  %d  %d", xn, ipca[0], edn(0, ipca[14]),
                    ipca[15], ipca[16], ipca[17]); GM_Log(str);
            );
            ((ipca[14] == `MIDI) && ((ipca[16] & 0xF0) == 144) && ((dbg & stopbit) == 0)) ? (
                // got a "note on"
                longplay ? (
                    longplay = 0;
                    pn = longsnds[rand(longsnds[-1])];
                    play(`clip, pn, `vol, -8, `spmode, 2);
                ) : (
                    pn = snds[rand(snds[-1])];
                    play(`clip, pn);
                );
                sprintf(str, "THRD%d  : Play clip: %d.", xn, pn); GM_Log(str);
            );
        );
    );
);

function MainThr()
(
   pnum = pnum + 1;
   doMIDI(pnum);
);


function longdo()
(
    flg = 1;
    while(flg) (
        wait(135);
        longplay = 1;
    );
);


function modsnds()
(
    flg = 1;
    while (flg) (
        wait(300);
        snds = snds1;
        sprintf(str, "THRD M : Play set : %d.", 1); GM_Log(str);
        wait(300);
        snds = snds2;
        sprintf(str, "THRD M : Play set : %d.", 2); GM_Log(str);
    );
);


loop(8,
    wait(1);
    thread(`run, thread(`new, MainThr));
);

thread(`run, thread(`new, longdo));
thread(`run, thread(`new, modsnds));

wait(30);

sprintf(str, "%s  ended", id); GM_Log(str);

